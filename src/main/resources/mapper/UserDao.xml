<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lk.ofo.dao.UserDao">

    <select id="queryUserByPhoneAndPassword" resultType="User">
		SELECT *
		FROM _user
		WHERE password=#{password}
		AND phone=#{phone}
	</select>

    <select id="queryAllUser" resultType="User">
		SELECT *
		FROM _user
		where ${param}
		ORDER BY
		create_time DESC
		limit #{offset},#{limit}
	</select>

    <select id="queryUserById" resultType="User">
		SELECT *
		FROM _user
		WHERE id=#{id}
	</select>

    <select id="queryUser2ById" resultType="User2">
		SELECT *
		FROM _user2
		WHERE id=#{id}
	</select>


    <update id="update">
        UPDATE
        _user SET
        name=#{name},password = #{password},
        name2=#{name2},id_card=#{idCard},
        <if test="delTime!=null">
            del_Time = #{delTime},
        </if>
        update_Time=#{updateTime}
        WHERE
        id=#{id}
    </update>

    <update id="update2">
        UPDATE
        _user2 SET
        photo=#{photo},sex=#{sex},hobby=#{hobby},
        <if test="delTime!=null">
            del_Time = #{delTime},
        </if>
        update_Time=#{updateTime}
        WHERE
        id=#{id}
    </update>

    <select id="getCount" resultType="java.lang.Integer">
        SELECT count(*)
        FROM _user
        WHERE ${param}
    </select>


    <insert id="addUser2">
        INSERT _user2(id)
        values(#{id})
    </insert>

    <select id="sql" resultType="HashMap">
        ${sql}
    </select>

</mapper>